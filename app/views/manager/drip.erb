<h1>드립DB</h1><br />

<div class="row">
  <br />
  <a href="/manager/index">뒤로</a>
  <form class="col s12" action="/manager/drip_write" method="POST" enctype="multipart/form-data">
    <div class="row">
      <div class="input-field col s12">
        <input id="first_name" type="text" class="validate" name="title">
        <label for="first_name">제목</label>
      </div>
      <div class="input-field col s12">
        <input id="last_name" type="text" class="validate" name="content">
        <label for="last_name">내용</label>
      </div>
      <div class="file-field input-field col s12">
        <div class="btn">
          <span>File</span>
          <input type="file" name="img" accept="image/*">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div class="input-field col s12">
        <input id="last_name" type="text" class="validate" name="size">
        <label for="last_name">이미지사이즈</label>
      </div>
      <div class="input-field col s12">
        <input id="last_name" type="text" class="validate" name="source">
        <label for="last_name">출처</label>
      </div>
      <div class="input-field col s12">
        <input id="last_name" type="text" class="validate" name="source_url">
        <label for="last_name">출처링크</label>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>

<ul class="collapsible" data-collapsible="accordion">
<% @drip.each do |p| %>
  <li>
    <div class="collapsible-header" style="background-color:#111111"><%= p.title %></div>
    <div class="collapsible-body">
      <h5>제목 : <%= p.title %></h5><br />
      <h5>내용 : <%= p.content %></h5><br />
      <img src="<%= p.image_url %>" style="width:<%= p.image_size %>%">
      <h5>출처 : <%= p.source %></h5><br />
      <h5>출처주소 : <%= p.source_url %></h5><br />
      <a href="/manager/drip_delete/<%= p.id %>">삭제</a><br /><br />
      <a href="/manager/drip_detail/<%= p.id %>">수정</a>
    </div>
  </li>
<% end %>
</ul>
