<h1>최순실DB</h1><br />

<div class="row">
  <br />
  <a href="/manager/index">뒤로</a>
  <form class="col s12" action="/manager/soonsil_write" method="POST" enctype="multipart/form-data">
    <div class="row">
      <div class="input-field col s12">
        <input id="first_name" type="text" class="validate" name="title">
        <label for="first_name">제목</label>
      </div>
      <div class="input-field col s12">
        <textarea id="last_name" type="text" class="materialize-textarea" name="content"></textarea>
        <label for="last_name">내용</label>
      </div>
      <div class="input-field col s12">
        <input id="last_name" type="text" class="validate" name="order">
        <label for="last_name">순서</label>
      </div>
      <div class="file-field input-field col s12">
        <div class="btn">
          <span>File</span>
          <input type="file" name="img" accept="image/*">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div class="input-field col s12">
        <input id="last_name" type="text" class="validate" name="size">
        <label for="last_name">이미지사이즈(영상이면 0)</label>
      </div>
      <div class="input-field col s12">
        <input id="video_url" type="text" class="validate" name="video">
        <label for="video_url">영상주소</label>
      </div>
      <div class="input-field col s12">
        <input id="more_url" type="text" class="validate" name="moreurl">
        <label for="more_url">더보기링크</label>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>

<ul class="collapsible" data-collapsible="accordion">
<% @soonsil.order(:order).each do |p| %>
  <li>
    <div class="collapsible-header" style="background-color:#111111"><%= p.title %></div>
    <div class="collapsible-body">
      <h5>제목 : <%= p.title %></h5><br />
      <h5>내용 : <%= p.content %></h5><br />
      <img src="<%= p.image_url %>" style="width:<%= p.image_size %>%">
      <h5>순서 : <%= p.order %></h5><br />
      <h5>자세히보기 링크 : <%= p.moreurl %></h5><br />
      <a href="/manager/soonsil_delete/<%= p.id %>">삭제</a><br /><br />
      <a href="/manager/soonsil_detail/<%= p.id %>">수정</a>
    </div>
  </li>
<% end %>
</ul>
